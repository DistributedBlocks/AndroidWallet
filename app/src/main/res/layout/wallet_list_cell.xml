<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="70.0dip"
    android:id="@+id/wallet_info_rl"
    android:background="@color/lightGreyAlmostWhite"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="?selectableItemBackground" />

    <TextView
        android:id="@+id/wallet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16.0dip"
        android:layout_toStartOf="@+id/wallet_hours"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/darkText"
        android:textSize="13.0sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/wallet_hours"
        android:layout_width="80.0dip"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="4.0dip"
        android:layout_toStartOf="@+id/wallet_balance"
        android:gravity="start"
        android:maxLines="1"
        android:textColor="@color/darkGreyText"
        android:textSize="13.0sp" />

    <TextView
        android:id="@+id/wallet_balance"
        android:layout_width="80.0dip"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16.0dip"
        android:layout_toStartOf="@+id/chevron"
        android:gravity="end"
        android:maxLines="1"
        android:text="Balance"
        android:textColor="@color/darkText" />

    <ImageView
        android:id="@+id/chevron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:src="@drawable/chevron_right" />

    <View
        android:id="@id/bottom_divider"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_alignParentBottom="true"
        android:background="@color/wallet_list_divider" />
</RelativeLayout>