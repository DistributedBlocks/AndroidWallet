<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/wallet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="acvfvfv"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/wallet_name_coin_separater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/wallet_name"
            android:text=" - "
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/coins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/wallet_name_coin_separater"
            android:text="6.0"
            android:textColor="@color/button_gradient_light_brown"
            android:textSize="12sp" />

    </RelativeLayout>


</RelativeLayout>